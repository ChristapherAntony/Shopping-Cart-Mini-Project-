<body class="signUpBody">
    <div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 outerBoxSignUP ">
            <form action="/signUp" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <h1>Create New Account</h1>

                <div class="form-group">
                    <label for="first_name">Name</label>
                    <input type="text"  class="form-control"  name="Name" id="name" placeholder="Enter Full Name" onkeyup="validateName()"   >
                    <span id="name-error"></span>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" name="Email" id="email" placeholder="Email Address" onkeyup=" validateEmail()" >
                    <span id="email-error"></span>
                </div>

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control" name="Password" id="password1" onkeyup="validatePassword()" >
                    <span id = "pw1-error" ></span>

                </div>
                <div class="form-group">
                    <label for="pw">Confirm Password</label>
                    <input type="password" class="form-control" id="password2" onkeyup="validateConfirmPwd()"  >
                    <span id = "confirm-error" ></span>

                </div>
                
                
                {{#if emailError}}
                <p class="text-warning">{{'emailError'}}</p>
                {{/if}}

                <button onclick="return validateForm()" type="submit"  class="btn btn-secondary" >Submit</button><br>
                <span id="submit-error"></span><br>
                <a class="text-decoration-none text-white " href="/login">Already have an Account?</a>
                
            </form>
        </div>
    </div>
</div>

