


<div class="container">
    <h2 class="text-center mt-5 mb-3">Users Edit and Modify</h2>
    <table class="table table-hover " id="userView">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col"> <span>Options</span> <a href="/admin/add-user" class="btn btn-success p-1">Add User</a></th>
            </tr>
        </thead>
        <tbody>
            {{#each user}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.Name}}</td>
                <td>{{this.Email}}</td>

                <td>
                    <a href="/admin/edit-user/{{this._id}}" class="btn btn-secondary py-1">Edit</a>
                    <a href="/admin/delete-user/{{this._id}}" class="btn btn-dark py-1"
                        onclick="return confirm ('Are you sure to delete {{this.email}}?')">Delete</a>
                </td>
            </tr>
            {{/each}}
           
            
        </tbody>
    </table>
</div>
<script>
    $( function () {
    $('#userView').DataTable();
} );
</script>