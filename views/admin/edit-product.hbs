<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">  
                <h2 class="text-center">Edit Product</h2>

                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Brand</label>
                    <input type="text" value="{{product.Brand}}" name="Brand"  class="form-control" required>

                    <label for="">Description</label>
                    <input type="text" value="{{product.Description}}" name="Description" class="form-control" required>

                    <label for="">Price</label>
                    <input type="text" value="{{product.Price}}" name="Price" class="form-control" required>
                    
                    <label for="">Image</label>
                    <img src="/product-images/{{product._id}}.jpg" style="height: 200px ;" alt="">
                    <input type="file" class="form-control" name="image" >

                    <button type="submit" class="btn btn-secondary mt-4">Update</button>
                    <a href="/admin/all-products" class="btn btn-secondary mt-4 mx-2 ">Cancel</a>

                </form> 
            </div>
        </div>
    </div>
</section>