<body class="editBody">
    {{!--

    <body style="background-color: lightcoral;"> --}}
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 outerBoxEdit ">
                    <form action="/admin/user-update/{{user._id}}" method="post" role="form"
                        enctype="application/x-www-form-urlencoded">
                        <h1 class="pb-5 pt-3">Edit User Details</h1>

                        <div class="form-group">
                            <label for="first_name">Name</label>
                            <input type="text" value="{{user.Name}}" class="form-control" name="Name" id="name"
                                placeholder="Enter Name" onkeyup="validateName()" required>
                            <span id="name-error"></span>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" value="{{user.Email}}" class="form-control" name="Email" id="email"
                                placeholder="Email Address" onkeyup=" validateEmail()" required>
                                <span id="email-error"></span>
                        </div>

                        <br><br>

                        {{#if emailError}}
                        <p class="text-warning">{{'emailError'}}</p>
                        {{/if}}

                        <button onclick="return validateForm()" type="submit" class="btn btn-secondary">Save edits</button>
                        <a href="/admin/allUsers" class="btn btn-secondary ">Cancel</a>


                    </form>
                </div>
            </div>
        </div>
    </body>