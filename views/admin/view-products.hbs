
<section>
    <div class="container">
        

        <div class="">  
            <a href="/admin/add-product" class="btn btn-secondary ml-auto mt-5" >Add Products</a>  
        </div>
        <table class="table mt-5 " id="productView">
            <thead>
                <tr>
                    {{!-- <th>NO</th> --}}
                    <th scope="col">No.</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Image</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.Brand}}</td>
                    <td scope="row"><img src="/product-images/{{this._id}}.jpg" style="height: 60px" alt=""></td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Price}}</td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-secondary py-1 my-1">Edit &nbsp;&nbsp;&nbsp;</a> 
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-dark py-1 " onclick="return confirm('Are you wanted to delete this {{this.Brand}} ?')">Delete</a></td>

                </tr>
                {{/each}}


            </tbody>
        </table>
    </div>
</section>

<script>
    $( function () {
    $('#productView').DataTable();
} );
</script>